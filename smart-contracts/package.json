{
  "name": "smart-contracts",
  "private": true,
  "scripts": {
    "verifier:export": "hardhat verifier:export --zkey ../zk-proofs/artifacts/claim_verification_final.zkey --out contracts/Verifier.sol",
    "compile": "hardhat compile",
    "compile:with-verifier": "npm run verifier:export && npm run compile",
    "deploy:sepolia": "npm run verifier:export && hardhat run scripts/deploy.ts --network sepolia",
    "pretest": "npx hardhat clean && npm run compile:with-verifier",
    "test": "hardhat test"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "dotenv": "^16.6.1",
    "hardhat": "^2.26.3",
    "snarkjs": "^0.7.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typechain": "^8.3.2",
    "typescript": "^5.9.2"
  }
}
